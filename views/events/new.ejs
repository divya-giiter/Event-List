<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Event</h1>
    <div class="col-6 offset-3">
    <form method="POST" action="/events" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control"  type="text" id="name" name="event[name]" required/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control"  type="email" id="email" name="event[email]" required/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="oragniser">Organiser</label>
            <input class="form-control"  type="text" id="organiser" name="event[organiser]" required/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control"  type="text" id="location" name="event[location]" required/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <input class="form-control"  type="text" id="descriptiom" name="event[description]" required/>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Event</button>
        </div>
        </form>

    <a href="/events">All Events</a>
</div>

